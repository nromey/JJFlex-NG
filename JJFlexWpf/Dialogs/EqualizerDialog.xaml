<local:JJFlexDialog x:Class="JJFlexWpf.Dialogs.EqualizerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:JJFlexWpf"
        Title="Equalizer"
        Width="600" SizeToContent="Height"
        ResizeMode="NoResize">

    <StackPanel Margin="12">
        <!-- EQ Band Controls -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
            <StackPanel Margin="0,0,12,0" Width="55">
                <TextBlock Text="63 Hz" HorizontalAlignment="Center" Margin="0,0,0,2"/>
                <TextBox x:Name="Level63Box" HorizontalAlignment="Stretch"
                         AutomationProperties.Name="63 Hz level"
                         PreviewKeyDown="LevelBox_PreviewKeyDown" LostFocus="LevelBox_LostFocus"
                         Tag="0"/>
            </StackPanel>
            <StackPanel Margin="0,0,12,0" Width="55">
                <TextBlock Text="125 Hz" HorizontalAlignment="Center" Margin="0,0,0,2"/>
                <TextBox x:Name="Level125Box" HorizontalAlignment="Stretch"
                         AutomationProperties.Name="125 Hz level"
                         PreviewKeyDown="LevelBox_PreviewKeyDown" LostFocus="LevelBox_LostFocus"
                         Tag="1"/>
            </StackPanel>
            <StackPanel Margin="0,0,12,0" Width="55">
                <TextBlock Text="250 Hz" HorizontalAlignment="Center" Margin="0,0,0,2"/>
                <TextBox x:Name="Level250Box" HorizontalAlignment="Stretch"
                         AutomationProperties.Name="250 Hz level"
                         PreviewKeyDown="LevelBox_PreviewKeyDown" LostFocus="LevelBox_LostFocus"
                         Tag="2"/>
            </StackPanel>
            <StackPanel Margin="0,0,12,0" Width="55">
                <TextBlock Text="500 Hz" HorizontalAlignment="Center" Margin="0,0,0,2"/>
                <TextBox x:Name="Level500Box" HorizontalAlignment="Stretch"
                         AutomationProperties.Name="500 Hz level"
                         PreviewKeyDown="LevelBox_PreviewKeyDown" LostFocus="LevelBox_LostFocus"
                         Tag="3"/>
            </StackPanel>
            <StackPanel Margin="0,0,12,0" Width="55">
                <TextBlock Text="1 kHz" HorizontalAlignment="Center" Margin="0,0,0,2"/>
                <TextBox x:Name="Level1000Box" HorizontalAlignment="Stretch"
                         AutomationProperties.Name="1000 Hz level"
                         PreviewKeyDown="LevelBox_PreviewKeyDown" LostFocus="LevelBox_LostFocus"
                         Tag="4"/>
            </StackPanel>
            <StackPanel Margin="0,0,12,0" Width="55">
                <TextBlock Text="2 kHz" HorizontalAlignment="Center" Margin="0,0,0,2"/>
                <TextBox x:Name="Level2000Box" HorizontalAlignment="Stretch"
                         AutomationProperties.Name="2000 Hz level"
                         PreviewKeyDown="LevelBox_PreviewKeyDown" LostFocus="LevelBox_LostFocus"
                         Tag="5"/>
            </StackPanel>
            <StackPanel Margin="0,0,12,0" Width="55">
                <TextBlock Text="4 kHz" HorizontalAlignment="Center" Margin="0,0,0,2"/>
                <TextBox x:Name="Level4000Box" HorizontalAlignment="Stretch"
                         AutomationProperties.Name="4000 Hz level"
                         PreviewKeyDown="LevelBox_PreviewKeyDown" LostFocus="LevelBox_LostFocus"
                         Tag="6"/>
            </StackPanel>
            <StackPanel Width="55">
                <TextBlock Text="8 kHz" HorizontalAlignment="Center" Margin="0,0,0,2"/>
                <TextBox x:Name="Level8000Box" HorizontalAlignment="Stretch"
                         AutomationProperties.Name="8000 Hz level"
                         PreviewKeyDown="LevelBox_PreviewKeyDown" LostFocus="LevelBox_LostFocus"
                         Tag="7"/>
            </StackPanel>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal">
            <Button Content="Restore" MinWidth="75" Margin="0,0,8,0"
                    AutomationProperties.Name="Restore original values"
                    Click="RestoreButton_Click"/>
            <Button Content="Clear" MinWidth="75" Margin="0,0,8,0"
                    AutomationProperties.Name="Clear all bands to zero"
                    Click="ClearButton_Click"/>
            <Button Content="Finished" MinWidth="75" Margin="0,0,8,0" IsDefault="True"
                    AutomationProperties.Name="Accept changes and close"
                    Click="FinishedButton_Click"/>
            <Button Content="Cancel" MinWidth="75" IsCancel="True"
                    AutomationProperties.Name="Cancel changes"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</local:JJFlexDialog>
