<local:JJFlexDialog x:Class="JJFlexWpf.Dialogs.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:JJFlexWpf"
        Title="About"
        Width="500" Height="340"
        SizeToContent="Height">
    <StackPanel Margin="12">
        <TextBlock x:Name="ProductNameLabel" FontSize="16" FontWeight="Bold"
                   Margin="0,0,0,4"
                   AutomationProperties.Name="Product name" />
        <TextBlock x:Name="VersionLabel" Margin="0,0,0,4"
                   AutomationProperties.Name="Version" />
        <TextBlock x:Name="CopyrightLabel" Margin="0,0,0,4"
                   AutomationProperties.Name="Copyright" />
        <TextBlock x:Name="CompanyLabel" Margin="0,0,0,8"
                   AutomationProperties.Name="Company" />
        <TextBox x:Name="DescriptionBox" IsReadOnly="True"
                 TextWrapping="Wrap" AcceptsReturn="True"
                 Height="140"
                 VerticalScrollBarVisibility="Auto"
                 AutomationProperties.Name="Details" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="OK" MinWidth="80" Height="28"
                    IsDefault="True" IsCancel="True" Click="OKButton_Click"
                    AutomationProperties.Name="OK" />
        </StackPanel>
    </StackPanel>
</local:JJFlexDialog>
