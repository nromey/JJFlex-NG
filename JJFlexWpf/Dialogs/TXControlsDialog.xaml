<local:JJFlexDialog x:Class="JJFlexWpf.Dialogs.TXControlsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:JJFlexWpf"
        Title="Transmit Controls"
        Width="420" Height="340"
        SizeToContent="Height">

    <StackPanel Margin="12">
        <!-- TX Request Section -->
        <GroupBox Header="TX Request" Margin="0,0,0,8" AutomationProperties.Name="TX Request">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- RCA -->
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="4">
                    <CheckBox x:Name="TXReqRCACheck" Content="TX Req RCA"
                              AutomationProperties.Name="TX Request RCA Enabled"
                              Checked="TXReqRCACheck_Changed" Unchecked="TXReqRCACheck_Changed"/>
                    <StackPanel Orientation="Horizontal" Margin="20,4,0,0">
                        <TextBlock Text="Polarity:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <ComboBox x:Name="TXReqRCAPolarityCombo" Width="70"
                                  AutomationProperties.Name="TX Request RCA Polarity"
                                  SelectionChanged="TXReqRCAPolarityCombo_Changed"/>
                    </StackPanel>
                </StackPanel>

                <!-- ACC -->
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="4">
                    <CheckBox x:Name="TXReqACCCheck" Content="TX Req ACC"
                              AutomationProperties.Name="TX Request ACC Enabled"
                              Checked="TXReqACCCheck_Changed" Unchecked="TXReqACCCheck_Changed"/>
                    <StackPanel Orientation="Horizontal" Margin="20,4,0,0">
                        <TextBlock Text="Polarity:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <ComboBox x:Name="TXReqACCPolarityCombo" Width="70"
                                  AutomationProperties.Name="TX Request ACC Polarity"
                                  SelectionChanged="TXReqACCPolarityCombo_Changed"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- TX Outputs Section -->
        <GroupBox Header="TX Outputs" Margin="0,0,0,8" AutomationProperties.Name="TX Outputs">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- TX1 RCA -->
                <CheckBox x:Name="TX1RCACheck" Grid.Row="0" Grid.Column="0"
                          Content="TX1 RCA" Margin="4"
                          AutomationProperties.Name="TX1 RCA Enabled"
                          Checked="TX1RCACheck_Changed" Unchecked="TX1RCACheck_Changed"/>
                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="4">
                    <TextBlock Text="Delay:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBox x:Name="TX1DelayBox" Width="60"
                             AutomationProperties.Name="TX1 RCA Delay"
                             PreviewKeyDown="DelayBox_PreviewKeyDown"
                             LostFocus="TX1DelayBox_LostFocus"/>
                </StackPanel>

                <!-- TX2 RCA -->
                <CheckBox x:Name="TX2RCACheck" Grid.Row="1" Grid.Column="0"
                          Content="TX2 RCA" Margin="4"
                          AutomationProperties.Name="TX2 RCA Enabled"
                          Checked="TX2RCACheck_Changed" Unchecked="TX2RCACheck_Changed"/>
                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="4">
                    <TextBlock Text="Delay:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBox x:Name="TX2DelayBox" Width="60"
                             AutomationProperties.Name="TX2 RCA Delay"
                             PreviewKeyDown="DelayBox_PreviewKeyDown"
                             LostFocus="TX2DelayBox_LostFocus"/>
                </StackPanel>

                <!-- TX3 RCA -->
                <CheckBox x:Name="TX3RCACheck" Grid.Row="2" Grid.Column="0"
                          Content="TX3 RCA" Margin="4"
                          AutomationProperties.Name="TX3 RCA Enabled"
                          Checked="TX3RCACheck_Changed" Unchecked="TX3RCACheck_Changed"/>
                <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="4">
                    <TextBlock Text="Delay:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBox x:Name="TX3DelayBox" Width="60"
                             AutomationProperties.Name="TX3 RCA Delay"
                             PreviewKeyDown="DelayBox_PreviewKeyDown"
                             LostFocus="TX3DelayBox_LostFocus"/>
                </StackPanel>

                <!-- TX ACC -->
                <CheckBox x:Name="TXACCCheck" Grid.Row="3" Grid.Column="0"
                          Content="TX ACC" Margin="4"
                          AutomationProperties.Name="TX ACC Enabled"
                          Checked="TXACCCheck_Changed" Unchecked="TXACCCheck_Changed"/>
                <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="4">
                    <TextBlock Text="Delay:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBox x:Name="TXACCDelayBox" Width="60"
                             AutomationProperties.Name="TX ACC Delay"
                             PreviewKeyDown="DelayBox_PreviewKeyDown"
                             LostFocus="TXACCDelayBox_LostFocus"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Other Controls -->
        <GroupBox Header="Other" AutomationProperties.Name="Other Controls">
            <StackPanel Orientation="Horizontal" Margin="4">
                <CheckBox x:Name="ALCCheck" Content="Hardware ALC" Margin="0,0,20,0"
                          AutomationProperties.Name="Hardware ALC Enabled"
                          Checked="ALCCheck_Changed" Unchecked="ALCCheck_Changed"/>
                <CheckBox x:Name="RemoteOnCheck" Content="Remote On"
                          AutomationProperties.Name="Remote On Enabled"
                          Checked="RemoteOnCheck_Changed" Unchecked="RemoteOnCheck_Changed"/>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</local:JJFlexDialog>
