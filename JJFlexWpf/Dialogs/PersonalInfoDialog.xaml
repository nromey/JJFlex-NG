<local:JJFlexDialog x:Class="JJFlexWpf.Dialogs.PersonalInfoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:JJFlexWpf"
        Title="Operator Information"
        Width="500" Height="620"
        ResizeMode="NoResize"
        AutomationProperties.Name="Operator Information">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="12">
            <!-- Identity -->
            <GroupBox Header="Identity" Style="{StaticResource DialogGroupBox}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Full Name:" Style="{StaticResource DialogLabel}"/>
                    <TextBox x:Name="FullNameBox" Grid.Row="0" Grid.Column="1" Style="{StaticResource DialogTextBox}"
                             AutomationProperties.Name="Full name"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Call Sign:" Style="{StaticResource DialogLabel}"/>
                    <TextBox x:Name="CallSignBox" Grid.Row="1" Grid.Column="1" Style="{StaticResource DialogTextBox}"
                             AutomationProperties.Name="Call sign"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Handle:" Style="{StaticResource DialogLabel}"/>
                    <TextBox x:Name="HandleBox" Grid.Row="2" Grid.Column="1" Style="{StaticResource DialogTextBox}"
                             AutomationProperties.Name="Handle or nickname"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="QTH:" Style="{StaticResource DialogLabel}"/>
                    <TextBox x:Name="QTHBox" Grid.Row="3" Grid.Column="1" Style="{StaticResource DialogTextBox}"
                             AutomationProperties.Name="QTH location"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Grid Square:" Style="{StaticResource DialogLabel}"/>
                    <TextBox x:Name="GridSquareBox" Grid.Row="4" Grid.Column="1" Style="{StaticResource DialogTextBox}"
                             AutomationProperties.Name="Grid square"/>

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="License Class:" Style="{StaticResource DialogLabel}"/>
                    <ComboBox x:Name="LicenseList" Grid.Row="5" Grid.Column="1" Style="{StaticResource DialogComboBox}"
                              AutomationProperties.Name="License class"/>
                </Grid>
            </GroupBox>

            <!-- Accessibility -->
            <GroupBox Header="Accessibility" Style="{StaticResource DialogGroupBox}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Braille Display Size:" Style="{StaticResource DialogLabel}"/>
                    <TextBox x:Name="BRLSizeBox" Grid.Column="1" Style="{StaticResource DialogTextBox}" Width="80"
                             HorizontalAlignment="Left"
                             AutomationProperties.Name="Braille display size in cells"/>
                </Grid>
            </GroupBox>

            <!-- DX Cluster -->
            <GroupBox Header="DX Cluster" Style="{StaticResource DialogGroupBox}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Cluster Address:" Style="{StaticResource DialogLabel}"/>
                    <TextBox x:Name="AddressBox" Grid.Row="0" Grid.Column="1" Style="{StaticResource DialogTextBox}"
                             AutomationProperties.Name="DX cluster address"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Login Name:" Style="{StaticResource DialogLabel}"/>
                    <TextBox x:Name="ClusterLoginNameBox" Grid.Row="1" Grid.Column="1" Style="{StaticResource DialogTextBox}"
                             GotFocus="ClusterLoginNameBox_GotFocus"
                             AutomationProperties.Name="Cluster login name"/>
                </Grid>
            </GroupBox>

            <!-- Callbook Lookup -->
            <GroupBox Header="Callbook Lookup" Style="{StaticResource DialogGroupBox}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Source:" Style="{StaticResource DialogLabel}"/>
                    <ComboBox x:Name="CallbookSourceCombo" Grid.Row="0" Grid.Column="1" Style="{StaticResource DialogComboBox}"
                              SelectionChanged="CallbookSourceCombo_SelectionChanged"
                              AutomationProperties.Name="Callbook lookup source"/>

                    <TextBlock x:Name="CallbookUsernameLabel" Grid.Row="1" Grid.Column="0" Text="Username:" Style="{StaticResource DialogLabel}"/>
                    <TextBox x:Name="CallbookUsernameBox" Grid.Row="1" Grid.Column="1" Style="{StaticResource DialogTextBox}"
                             AutomationProperties.Name="Callbook username"/>

                    <TextBlock x:Name="CallbookPasswordLabel" Grid.Row="2" Grid.Column="0" Text="Password:" Style="{StaticResource DialogLabel}"/>
                    <PasswordBox x:Name="CallbookPasswordBox" Grid.Row="2" Grid.Column="1" Height="24" Margin="0,4"
                                 AutomationProperties.Name="Callbook password"/>
                </Grid>
            </GroupBox>

            <!-- Logging -->
            <GroupBox Header="Logging" Style="{StaticResource DialogGroupBox}">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Recent QSOs:" Style="{StaticResource DialogLabel}"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBox x:Name="RecentQsoBox" Width="60" Style="{StaticResource DialogTextBox}"
                                     AutomationProperties.Name="Number of recent QSOs to display"/>
                        </StackPanel>
                    </Grid>
                    <CheckBox x:Name="QrzLogbookEnabledBox" Content="Enable QRZ Logbook integration"
                              Margin="0,4" Checked="QrzLogbookEnabledBox_Changed" Unchecked="QrzLogbookEnabledBox_Changed"
                              AutomationProperties.Name="Enable QRZ Logbook integration"/>
                    <Grid Margin="20,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="QrzLogbookApiKeyLabel" Grid.Column="0" Text="API Key:"
                                   Style="{StaticResource DialogLabel}"/>
                        <TextBox x:Name="QrzLogbookApiKeyBox" Grid.Column="1" Style="{StaticResource DialogTextBox}"
                                 Margin="0,4,8,4"
                                 AutomationProperties.Name="QRZ Logbook API key"/>
                        <Button x:Name="QrzLogbookValidateButton" Grid.Column="2" Content="Validate"
                                MinWidth="70" Height="28"
                                AutomationProperties.Name="Validate QRZ Logbook API key"
                                Click="QrzLogbookValidateButton_Click"/>
                    </Grid>
                </StackPanel>
            </GroupBox>

            <!-- Options -->
            <CheckBox x:Name="DefaultBox" Content="Default operator" Margin="0,8,0,0"
                      AutomationProperties.Name="Set as default operator"/>

            <Button Content="Log Settings..." Margin="0,8,0,0" HorizontalAlignment="Left"
                    MinWidth="110" Height="28"
                    AutomationProperties.Name="Open log settings"
                    Click="LogButton_Click"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button x:Name="OKButton" Content="OK" Style="{StaticResource OkButton}"
                        AutomationProperties.Name="Save operator information"
                        Click="OKButton_Click"/>
                <Button Content="Cancel" Style="{StaticResource CancelButton}"
                        AutomationProperties.Name="Cancel"
                        Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</local:JJFlexDialog>
