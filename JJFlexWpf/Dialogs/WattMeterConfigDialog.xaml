<local:JJFlexDialog x:Class="JJFlexWpf.Dialogs.WattMeterConfigDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:JJFlexWpf"
        Title="Watt Meter Configuration"
        Width="320" Height="240"
        SizeToContent="Height">
    <StackPanel Margin="12">
        <DockPanel Margin="0,0,0,8">
            <Label Content="COM Port:" DockPanel.Dock="Left" Width="90"
                   VerticalAlignment="Center" />
            <ComboBox x:Name="PortList"
                      AutomationProperties.Name="COM port" />
        </DockPanel>
        <DockPanel Margin="0,0,0,8">
            <Label Content="Usage:" DockPanel.Dock="Left" Width="90"
                   VerticalAlignment="Center" />
            <ComboBox x:Name="UsageList"
                      AutomationProperties.Name="Watt meter usage" />
        </DockPanel>
        <DockPanel Margin="0,0,0,8">
            <Label Content="Power Type:" DockPanel.Dock="Left" Width="90"
                   VerticalAlignment="Center" />
            <ComboBox x:Name="PowerTypeList"
                      AutomationProperties.Name="Power type" />
        </DockPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Configure" MinWidth="80" Height="28" Margin="0,0,8,0"
                    IsDefault="True" Click="ConfigureButton_Click"
                    AutomationProperties.Name="Apply configuration" />
            <Button Content="Cancel" MinWidth="80" Height="28"
                    IsCancel="True"
                    AutomationProperties.Name="Cancel" />
        </StackPanel>
    </StackPanel>
</local:JJFlexDialog>
