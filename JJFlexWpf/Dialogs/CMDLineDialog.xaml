<local:JJFlexDialog x:Class="JJFlexWpf.Dialogs.CMDLineDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:JJFlexWpf"
        Title="Command Line"
        Width="260" Height="120"
        SizeToContent="Height">
    <StackPanel Margin="12">
        <DockPanel Margin="0,0,0,8">
            <Label Content="cmd:" DockPanel.Dock="Left" Padding="0,0,8,0"
                   VerticalAlignment="Center" />
            <TextBox x:Name="CommandBox"
                     AutomationProperties.Name="Command"
                     VerticalAlignment="Center" />
        </DockPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Send" MinWidth="80" Height="28" Margin="0,0,8,0"
                    IsDefault="True" Click="SendButton_Click"
                    AutomationProperties.Name="Send" />
            <Button Content="Cancel" MinWidth="80" Height="28"
                    IsCancel="True"
                    AutomationProperties.Name="Cancel" />
        </StackPanel>
    </StackPanel>
</local:JJFlexDialog>
