<local:JJFlexDialog x:Class="JJFlexWpf.Dialogs.ManageGroupsEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:JJFlexWpf"
        Title="Edit Memory Group"
        Width="300" Height="450"
        ResizeMode="CanResizeWithGrip">
    <DockPanel Margin="12">
        <DockPanel DockPanel.Dock="Top" Margin="0,0,0,8">
            <Label Content="Group name:" DockPanel.Dock="Left" Padding="0,0,8,0"
                   VerticalAlignment="Center" />
            <TextBox x:Name="NameBox"
                     AutomationProperties.Name="Group name"
                     VerticalAlignment="Center" />
        </DockPanel>
        <Label DockPanel.Dock="Top" Content="Group members:" Padding="0,0,0,4" />
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="OK" MinWidth="80" Height="28" Margin="0,0,8,0"
                    IsDefault="True" Click="OKButton_Click"
                    AutomationProperties.Name="OK" />
            <Button Content="Cancel" MinWidth="80" Height="28"
                    IsCancel="True"
                    AutomationProperties.Name="Cancel" />
        </StackPanel>
        <ListBox x:Name="MembersBox" SelectionMode="Multiple"
                 AutomationProperties.Name="Memory members">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox Content="{Binding Name}" IsChecked="{Binding IsChecked}"
                              AutomationProperties.Name="{Binding Name}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</local:JJFlexDialog>
