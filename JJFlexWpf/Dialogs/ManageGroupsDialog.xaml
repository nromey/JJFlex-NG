<local:JJFlexDialog x:Class="JJFlexWpf.Dialogs.ManageGroupsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:JJFlexWpf"
        Title="Manage Memory Groups"
        Width="550" Height="420"
        ResizeMode="CanResizeWithGrip">
    <DockPanel Margin="12">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Add Group" MinWidth="90" Height="28" Margin="0,0,8,0"
                    Click="AddButton_Click"
                    AutomationProperties.Name="Add group" />
            <Button Content="Edit Group" MinWidth="90" Height="28" Margin="0,0,8,0"
                    Click="EditButton_Click"
                    AutomationProperties.Name="Edit group" />
            <Button Content="Delete Group" MinWidth="90" Height="28" Margin="0,0,8,0"
                    Click="DeleteButton_Click"
                    AutomationProperties.Name="Delete group" />
            <Button Content="Done" MinWidth="80" Height="28"
                    IsDefault="True" IsCancel="True" Click="DoneButton_Click"
                    AutomationProperties.Name="Done" />
        </StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="8" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Column="0">
                <Label DockPanel.Dock="Top" Content="Groups" Padding="0,0,0,4" />
                <ListBox x:Name="GroupsListBox"
                         AutomationProperties.Name="Memory groups"
                         SelectionChanged="GroupsListBox_SelectionChanged" />
            </DockPanel>
            <DockPanel Grid.Column="2">
                <Label DockPanel.Dock="Top" Content="Members" Padding="0,0,0,4" />
                <ListBox x:Name="MembersListBox" IsEnabled="False"
                         AutomationProperties.Name="Group members" />
            </DockPanel>
        </Grid>
    </DockPanel>
</local:JJFlexDialog>
