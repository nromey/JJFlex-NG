<local:JJFlexDialog x:Class="JJFlexWpf.Dialogs.LogCharacteristicsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:JJFlexWpf"
        Title="Log Characteristics"
        Width="450" Height="420"
        SizeToContent="Height">
    <StackPanel Margin="12">
        <DockPanel Margin="0,0,0,8">
            <Label Content="Log File:" DockPanel.Dock="Left" Width="80"
                   VerticalAlignment="Center" />
            <Button Content="Browse" DockPanel.Dock="Right" MinWidth="60" Height="24"
                    Margin="8,0,0,0" Click="BrowseButton_Click"
                    AutomationProperties.Name="Browse for log file" />
            <TextBox x:Name="NameBox"
                     AutomationProperties.Name="Log file name"
                     LostFocus="NameBox_LostFocus"
                     VerticalAlignment="Center" />
        </DockPanel>
        <DockPanel Margin="0,0,0,8">
            <Label Content="Log Form:" DockPanel.Dock="Left" Width="80"
                   VerticalAlignment="Center" />
            <ComboBox x:Name="FormList"
                      AutomationProperties.Name="Log form" />
        </DockPanel>
        <DockPanel Margin="0,0,0,8">
            <Label Content="Dup Check:" DockPanel.Dock="Left" Width="80"
                   VerticalAlignment="Center" />
            <ComboBox x:Name="DupList"
                      AutomationProperties.Name="Duplicate checking" />
        </DockPanel>
        <DockPanel Margin="0,0,0,8">
            <Label Content="Serial #:" DockPanel.Dock="Left" Width="80"
                   VerticalAlignment="Center" />
            <TextBox x:Name="FirstSerialBox" Width="80"
                     AutomationProperties.Name="First serial number"
                     HorizontalAlignment="Left" VerticalAlignment="Center"
                     Text="1" />
        </DockPanel>
        <DockPanel Margin="0,0,0,8">
            <Label Content="Lookup:" DockPanel.Dock="Left" Width="80"
                   VerticalAlignment="Center" />
            <ComboBox x:Name="LookupList"
                      AutomationProperties.Name="Callsign lookup method" />
        </DockPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="OK" MinWidth="80" Height="28" Margin="0,0,8,0"
                    IsDefault="True" Click="OKButton_Click"
                    AutomationProperties.Name="OK" />
            <Button Content="Cancel" MinWidth="80" Height="28"
                    IsCancel="True"
                    AutomationProperties.Name="Cancel" />
        </StackPanel>
    </StackPanel>
</local:JJFlexDialog>
