<local:JJFlexDialog x:Class="JJFlexWpf.Dialogs.LogTemplateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:JJFlexWpf"
        Title="Log Entry"
        Width="600" Height="500"
        ResizeMode="CanResizeWithGrip">
    <DockPanel Margin="12">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Save" MinWidth="80" Height="28" Margin="0,0,8,0"
                    IsDefault="True" Click="SaveButton_Click"
                    AutomationProperties.Name="Save entry" />
            <Button Content="Cancel" MinWidth="80" Height="28"
                    IsCancel="True"
                    AutomationProperties.Name="Cancel" />
        </StackPanel>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="FieldsPanel"
                          AutomationProperties.Name="Log fields">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <DockPanel Margin="0,0,0,6">
                            <Label Content="{Binding Label}" DockPanel.Dock="Left"
                                   Width="100" VerticalAlignment="Center" />
                            <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                     IsReadOnly="{Binding IsReadOnly}"
                                     AutomationProperties.Name="{Binding Label}"
                                     VerticalAlignment="Center" />
                        </DockPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</local:JJFlexDialog>
