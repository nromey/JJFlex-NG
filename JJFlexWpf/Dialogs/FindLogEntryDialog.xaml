<local:JJFlexDialog x:Class="JJFlexWpf.Dialogs.FindLogEntryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:JJFlexWpf"
        Title="Find Log Entries"
        Width="400" Height="320"
        ResizeMode="CanResize"
        MinWidth="300" MinHeight="250">

    <DockPanel Margin="8">
        <TextBlock DockPanel.Dock="Top" Text="Found Items" FontWeight="Bold" Margin="0,0,0,4"/>

        <Button x:Name="DoneButton" DockPanel.Dock="Bottom" Content="Done" MinWidth="75"
                HorizontalAlignment="Left" Margin="0,8,0,0" IsCancel="True"
                AutomationProperties.Name="Done" Click="DoneButton_Click"/>

        <ListBox x:Name="ItemList"
                 AutomationProperties.Name="Found items"
                 MouseDoubleClick="ItemList_DoubleClick"
                 KeyDown="ItemList_KeyDown"
                 FontFamily="Consolas" FontSize="12"/>
    </DockPanel>
</local:JJFlexDialog>
