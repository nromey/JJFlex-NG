<local:JJFlexDialog x:Class="JJFlexWpf.Dialogs.ShowKeysDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:JJFlexWpf"
        Title="Keys and Actions"
        Width="450" Height="380"
        ResizeMode="CanResizeWithGrip">
    <DockPanel Margin="12">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Update" MinWidth="80" Height="28" Margin="0,0,8,0"
                    Click="UpdateButton_Click"
                    AutomationProperties.Name="Update key bindings" />
            <Button Content="Done" MinWidth="80" Height="28"
                    IsDefault="True" IsCancel="True" Click="DoneButton_Click"
                    AutomationProperties.Name="Done" />
        </StackPanel>
        <DockPanel DockPanel.Dock="Bottom" Margin="0,4,0,0">
            <Label Content="Action:" DockPanel.Dock="Left" Width="50"
                   VerticalAlignment="Center" />
            <TextBox x:Name="ActionBox" IsReadOnly="True"
                     AutomationProperties.Name="Action description"
                     VerticalAlignment="Center" />
        </DockPanel>
        <DockPanel DockPanel.Dock="Bottom" Margin="0,4,0,0">
            <Label Content="Value:" DockPanel.Dock="Left" Width="50"
                   VerticalAlignment="Center" />
            <TextBox x:Name="ValueBox" IsReadOnly="True"
                     AutomationProperties.Name="Action value"
                     VerticalAlignment="Center" />
        </DockPanel>
        <DockPanel>
            <Label DockPanel.Dock="Top" Content="Defined Keys" Padding="0,0,0,4" />
            <ListBox x:Name="DefinedKeysList"
                     AutomationProperties.Name="Configured keys"
                     SelectionChanged="DefinedKeysList_SelectionChanged" />
        </DockPanel>
    </DockPanel>
</local:JJFlexDialog>
