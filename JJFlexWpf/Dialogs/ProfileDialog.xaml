<local:JJFlexDialog x:Class="JJFlexWpf.Dialogs.ProfileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:JJFlexWpf"
        Title="Profiles"
        Width="450" Height="380"
        ResizeMode="NoResize"
        AutomationProperties.Name="Profile manager">
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Label -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Profiles:"
                   Style="{StaticResource DialogLabel}" Margin="0,0,0,4"/>

        <!-- Profile list -->
        <ListBox x:Name="ProfilesListBox" Grid.Row="1" Grid.Column="0"
                 Margin="0,0,8,0"
                 AutomationProperties.Name="Profile list"
                 SelectionChanged="ProfilesListBox_SelectionChanged"/>

        <!-- Action buttons -->
        <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Top">
            <Button Content="Select" MinWidth="90" Height="28" Margin="0,0,0,8"
                    AutomationProperties.Name="Select profile"
                    Click="SelectButton_Click"/>
            <Button Content="Add" MinWidth="90" Height="28" Margin="0,0,0,8"
                    AutomationProperties.Name="Add new profile"
                    Click="AddButton_Click"/>
            <Button Content="Update" MinWidth="90" Height="28" Margin="0,0,0,8"
                    AutomationProperties.Name="Update selected profile"
                    Click="UpdateButton_Click"/>
            <Button Content="Delete" MinWidth="90" Height="28" Margin="0,0,0,8"
                    AutomationProperties.Name="Delete selected profile"
                    Click="DeleteButton_Click"/>
            <Button x:Name="SaveButton" Content="Save" MinWidth="90" Height="28" Margin="0,0,0,8"
                    Visibility="Collapsed"
                    AutomationProperties.Name="Save profile to radio"
                    Click="SaveButton_Click"/>
        </StackPanel>

        <!-- Close button -->
        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                    Style="{StaticResource ButtonPanel}" Margin="0,8,0,0">
            <Button Content="Close" Style="{StaticResource CancelButton}"
                    AutomationProperties.Name="Close profile manager"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</local:JJFlexDialog>
