<local:JJFlexDialog x:Class="JJFlexWpf.Dialogs.TraceAdminDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:JJFlexWpf"
        Title="Select Trace Level"
        Width="300" Height="300"
        SizeToContent="Height">
    <StackPanel Margin="12">
        <DockPanel Margin="0,0,0,8">
            <Label Content="File Name:" DockPanel.Dock="Left" Padding="0,0,8,0"
                   VerticalAlignment="Center" />
            <Button Content="Browse" DockPanel.Dock="Right" MinWidth="60" Height="24"
                    Margin="8,0,0,0" Click="BrowseButton_Click"
                    AutomationProperties.Name="Browse for trace file" />
            <TextBox x:Name="FileNameBox"
                     AutomationProperties.Name="Trace file name"
                     VerticalAlignment="Center" />
        </DockPanel>
        <Label Content="Trace Level:" Padding="0,0,0,4" />
        <ListBox x:Name="LevelListBox" Height="100"
                 AutomationProperties.Name="Trace level" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button x:Name="ToggleButton" MinWidth="80" Height="28" Margin="0,0,8,0"
                    IsDefault="True" Click="ToggleButton_Click"
                    AutomationProperties.Name="Start or stop tracing" />
            <Button Content="Cancel" MinWidth="80" Height="28"
                    IsCancel="True"
                    AutomationProperties.Name="Cancel" />
        </StackPanel>
    </StackPanel>
</local:JJFlexDialog>
