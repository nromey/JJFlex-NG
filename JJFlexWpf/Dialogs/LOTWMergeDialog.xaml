<local:JJFlexDialog x:Class="JJFlexWpf.Dialogs.LOTWMergeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:JJFlexWpf"
        Title="LOTW Merge"
        Width="500" Height="320"
        SizeToContent="Height">
    <StackPanel Margin="12">
        <DockPanel Margin="0,0,0,8">
            <Label Content="LOTW File:" DockPanel.Dock="Left" Width="80"
                   VerticalAlignment="Center" />
            <TextBox x:Name="LOTWFileBox" IsReadOnly="True"
                     AutomationProperties.Name="LOTW file"
                     VerticalAlignment="Center" />
        </DockPanel>
        <DockPanel Margin="0,0,0,8">
            <Label Content="Log File:" DockPanel.Dock="Left" Width="80"
                   VerticalAlignment="Center" />
            <TextBox x:Name="LogBox" IsReadOnly="True"
                     AutomationProperties.Name="Log file"
                     VerticalAlignment="Center" />
        </DockPanel>
        <Label Content="Progress:" Padding="0,0,0,4" />
        <TextBox x:Name="ProgressBox" IsReadOnly="True" Height="100"
                 TextWrapping="Wrap" AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 AutomationProperties.Name="Merge progress"
                 AutomationProperties.LiveSetting="Polite" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button x:Name="MergeButton" Content="Merge" MinWidth="80" Height="28"
                    Margin="0,0,8,0" IsDefault="True" Click="MergeButton_Click"
                    AutomationProperties.Name="Start merge" />
            <Button x:Name="CancelCloseButton" Content="Cancel" MinWidth="80" Height="28"
                    IsCancel="True" Click="CancelButton_Click"
                    AutomationProperties.Name="Cancel" />
        </StackPanel>
    </StackPanel>
</local:JJFlexDialog>
