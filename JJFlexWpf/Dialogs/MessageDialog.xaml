<local:JJFlexDialog x:Class="JJFlexWpf.Dialogs.MessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:JJFlexWpf"
        Title="Message"
        Width="400" Height="200"
        SizeToContent="Height">
    <StackPanel Margin="12">
        <TextBlock x:Name="MessageText" TextWrapping="Wrap" Margin="0,0,0,8"
                   AutomationProperties.Name="Message" />
        <ContentPresenter x:Name="CustomContent" Margin="0,0,0,8" />
        <CheckBox x:Name="DontShowBox" Content="Don't show this again"
                  Visibility="Collapsed" Margin="0,0,0,8"
                  AutomationProperties.Name="Don't show this message again" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="OKBtn" Content="OK" MinWidth="80" Height="28" Margin="0,0,8,0"
                    IsDefault="True" Click="OKButton_Click"
                    AutomationProperties.Name="OK" />
            <Button x:Name="CancelBtn" Content="Cancel" MinWidth="80" Height="28"
                    IsCancel="True" Visibility="Collapsed"
                    AutomationProperties.Name="Cancel" />
        </StackPanel>
    </StackPanel>
</local:JJFlexDialog>
