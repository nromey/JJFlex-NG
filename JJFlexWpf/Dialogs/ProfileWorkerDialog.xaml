<local:JJFlexDialog x:Class="JJFlexWpf.Dialogs.ProfileWorkerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:JJFlexWpf"
        Title="Profile"
        Width="340" Height="230"
        ResizeMode="NoResize"
        AutomationProperties.Name="Profile editor">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:"
                   Style="{StaticResource DialogLabel}" Margin="0,0,8,8"/>
        <TextBox x:Name="NameBox" Grid.Row="0" Grid.Column="1"
                 Style="{StaticResource DialogTextBox}" Margin="0,0,0,8"
                 AutomationProperties.Name="Profile name"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Type:"
                   Style="{StaticResource DialogLabel}" Margin="0,0,8,8"/>
        <ComboBox x:Name="TypeBox" Grid.Row="1" Grid.Column="1"
                  Style="{StaticResource DialogComboBox}" Margin="0,0,0,8"
                  AutomationProperties.Name="Profile type"/>

        <CheckBox x:Name="DefaultBox" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                  Content="Default profile" Margin="0,4,0,0"
                  AutomationProperties.Name="Set as default profile"/>

        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                    Style="{StaticResource ButtonPanel}">
            <Button Content="OK" Style="{StaticResource OkButton}"
                    AutomationProperties.Name="OK"
                    Click="OkButton_Click"/>
            <Button Content="Cancel" Style="{StaticResource CancelButton}"
                    AutomationProperties.Name="Cancel"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</local:JJFlexDialog>
