<local:JJFlexDialog x:Class="JJFlexWpf.Dialogs.ReverseBeaconDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:JJFlexWpf"
        Title="Reverse Beacon"
        Width="260" Height="130"
        SizeToContent="Height">
    <StackPanel Margin="12">
        <DockPanel Margin="0,0,0,8">
            <Label Content="Call:" DockPanel.Dock="Left" Padding="0,0,8,0"
                   VerticalAlignment="Center" />
            <TextBox x:Name="CallBox"
                     AutomationProperties.Name="Call sign"
                     VerticalAlignment="Center" />
        </DockPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" MinWidth="80" Height="28" Margin="0,0,8,0"
                    IsDefault="True" Click="OKButton_Click"
                    AutomationProperties.Name="OK" />
            <Button Content="Cancel" MinWidth="80" Height="28"
                    IsCancel="True"
                    AutomationProperties.Name="Cancel" />
        </StackPanel>
    </StackPanel>
</local:JJFlexDialog>
