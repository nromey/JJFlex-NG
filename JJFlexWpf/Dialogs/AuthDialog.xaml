<local:JJFlexDialog x:Class="JJFlexWpf.Dialogs.AuthDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:JJFlexWpf"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="SmartLink Authentication"
        Width="600" Height="700"
        ResizeMode="CanResize"
        ShowInTaskbar="True"
        AutomationProperties.Name="SmartLink Authentication">
    <DockPanel>
        <!-- Status label at top -->
        <Border DockPanel.Dock="Top" Background="LightYellow" Padding="4">
            <TextBlock x:Name="StatusLabel" FontWeight="Bold"
                       Text="Authenticating with SmartLink..."
                       AutomationProperties.Name="Authentication status"/>
        </Border>

        <!-- WebView2 control -->
        <wv2:WebView2 x:Name="WebView"
                      AutomationProperties.Name="SmartLink login page"/>
    </DockPanel>
</local:JJFlexDialog>
