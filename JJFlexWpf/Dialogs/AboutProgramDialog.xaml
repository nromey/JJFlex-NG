<local:JJFlexDialog x:Class="JJFlexWpf.Dialogs.AboutProgramDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:JJFlexWpf"
        Title="About this Program"
        Width="500" Height="400"
        ResizeMode="CanResizeWithGrip">
    <DockPanel Margin="12">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="OK" MinWidth="80" Height="28"
                    IsDefault="True" IsCancel="True" Click="OKButton_Click"
                    AutomationProperties.Name="OK" />
        </StackPanel>
        <TextBox x:Name="InfoBox" IsReadOnly="True"
                 TextWrapping="Wrap" AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 AutomationProperties.Name="About information" />
    </DockPanel>
</local:JJFlexDialog>
