<local:JJFlexDialog x:Class="JJFlexWpf.Dialogs.ListerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:JJFlexWpf"
        Title="Selection"
        Width="400" Height="380"
        ResizeMode="CanResizeWithGrip">
    <DockPanel Margin="12">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Add" MinWidth="70" Height="28" Margin="0,0,8,0"
                    Click="AddButton_Click"
                    AutomationProperties.Name="Add" />
            <Button Content="Update" MinWidth="70" Height="28" Margin="0,0,8,0"
                    Click="UpdateButton_Click"
                    AutomationProperties.Name="Update" />
            <Button Content="Delete" MinWidth="70" Height="28" Margin="0,0,8,0"
                    Click="DeleteButton_Click"
                    AutomationProperties.Name="Delete" />
            <Button Content="Cancel" MinWidth="70" Height="28"
                    IsCancel="True"
                    AutomationProperties.Name="Cancel" />
        </StackPanel>
        <ListBox x:Name="ScreenList"
                 AutomationProperties.Name="Items"
                 SelectionChanged="ScreenList_SelectionChanged" />
    </DockPanel>
</local:JJFlexDialog>
