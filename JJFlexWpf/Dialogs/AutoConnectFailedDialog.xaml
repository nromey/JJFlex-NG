<local:JJFlexDialog x:Class="JJFlexWpf.Dialogs.AutoConnectFailedDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:JJFlexWpf"
        Title="Auto-Connect Failed"
        Width="440" Height="190"
        ResizeMode="NoResize"
        AutomationProperties.Name="Auto-connect failed">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Message -->
        <TextBlock x:Name="MessageText" Grid.Row="0" TextWrapping="Wrap"
                   Margin="0,0,0,16"
                   AutomationProperties.Name="Auto-connect failed message"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Try Again" MinWidth="90" Height="32" Margin="0,0,8,0"
                    AutomationProperties.Name="Try Again - retry connecting to the radio"
                    Click="TryAgainButton_Click"/>
            <Button Content="Disable" MinWidth="90" Height="32" Margin="0,0,8,0"
                    AutomationProperties.Name="Disable Auto-Connect for this radio"
                    Click="DisableButton_Click"/>
            <Button Content="Choose Another" MinWidth="110" Height="32" Margin="0,0,8,0"
                    AutomationProperties.Name="Choose Another Radio - open radio selector"
                    Click="ChooseAnotherButton_Click"/>
            <Button Content="Cancel" MinWidth="75" Height="32" IsCancel="True"
                    AutomationProperties.Name="Cancel - close this dialog and stay disconnected"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</local:JJFlexDialog>
