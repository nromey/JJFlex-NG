<local:JJFlexDialog x:Class="JJFlexWpf.Dialogs.LogEntryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:JJFlexWpf"
        Title="Log Entry Form"
        Width="600" Height="400"
        ResizeMode="CanResize"
        MinWidth="400" MinHeight="300">

    <DockPanel Margin="8">
        <!-- Bottom: OK/Cancel + navigation hint -->
        <StackPanel DockPanel.Dock="Bottom" Margin="0,8,0,0">
            <TextBlock x:Name="StatusText" Margin="0,0,0,4" FontSize="11" Foreground="Gray"
                       AutomationProperties.Name="Status"/>
            <StackPanel Orientation="Horizontal">
                <Button Content="OK" MinWidth="75" Margin="0,0,8,0" IsDefault="True"
                        AutomationProperties.Name="OK" Click="OKButton_Click"/>
                <Button Content="Cancel" MinWidth="75" IsCancel="True"
                        AutomationProperties.Name="Cancel" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Main content area: hosts the dynamic log form -->
        <ContentPresenter x:Name="FormContent" Margin="0,4,0,0"
                          AutomationProperties.Name="Log entry fields"/>
    </DockPanel>
</local:JJFlexDialog>
