<Window x:Class="JJFlexWpf.StationLookupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Station Lookup"
        Width="520" Height="280"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Loaded="Window_Loaded">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <!-- Row 0: Callsign + Lookup -->
        <Label Content="Call Sign" Target="{Binding ElementName=CallsignBox}" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="CallsignBox" Grid.Row="0" Grid.Column="1" Width="100" HorizontalAlignment="Left"
                 AutomationProperties.Name="Call Sign"
                 GotFocus="TextBox_GotFocus" VerticalAlignment="Center"/>
        <Button x:Name="LookupButton" Content="Lookup" Grid.Row="0" Grid.Column="2"
                Width="70" IsDefault="True"
                AutomationProperties.Name="Lookup"
                Click="LookupButton_Click" VerticalAlignment="Center"/>

        <!-- Row 1: Name, QTH, State -->
        <Label Content="Name" Target="{Binding ElementName=NameBox}" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" VerticalAlignment="Center">
            <TextBox x:Name="NameBox" Width="100" IsReadOnly="True"
                     AutomationProperties.Name="Name"
                     GotFocus="TextBox_GotFocus"/>
            <Label Content="QTH" Target="{Binding ElementName=QTHBox}" Margin="5,0,0,0"/>
            <TextBox x:Name="QTHBox" Width="140" IsReadOnly="True"
                     AutomationProperties.Name="QTH"
                     GotFocus="TextBox_GotFocus"/>
            <Label Content="State" Target="{Binding ElementName=StateBox}" Margin="5,0,0,0"/>
            <TextBox x:Name="StateBox" Width="40" IsReadOnly="True"
                     AutomationProperties.Name="State"
                     GotFocus="TextBox_GotFocus"/>
        </StackPanel>

        <!-- Row 2: Country -->
        <Label Content="Country" Target="{Binding ElementName=CountryBox}" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="CountryBox" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
                 IsReadOnly="True" AutomationProperties.Name="Country"
                 GotFocus="TextBox_GotFocus" VerticalAlignment="Center"/>

        <!-- Row 3: Lat/Long, CQ Zone, ITU Zone, GMT Offset -->
        <Label Content="Lat/Long" Target="{Binding ElementName=LatlongBox}" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" VerticalAlignment="Center">
            <TextBox x:Name="LatlongBox" Width="100" IsReadOnly="True"
                     AutomationProperties.Name="Lat/Long"
                     GotFocus="TextBox_GotFocus"/>
            <Label Content="CQ" Target="{Binding ElementName=CQBox}" Margin="5,0,0,0"/>
            <TextBox x:Name="CQBox" Width="25" IsReadOnly="True"
                     AutomationProperties.Name="CQ Zone"
                     GotFocus="TextBox_GotFocus"/>
            <Label Content="ITU" Target="{Binding ElementName=ITUBox}" Margin="5,0,0,0"/>
            <TextBox x:Name="ITUBox" Width="25" IsReadOnly="True"
                     AutomationProperties.Name="ITU Zone"
                     GotFocus="TextBox_GotFocus"/>
            <Label Content="GMT" Target="{Binding ElementName=GMTBox}" Margin="5,0,0,0"/>
            <TextBox x:Name="GMTBox" Width="35" IsReadOnly="True"
                     AutomationProperties.Name="GMT Offset"
                     GotFocus="TextBox_GotFocus"/>
        </StackPanel>

        <!-- Row 6: Done button -->
        <Button x:Name="DoneButton" Content="Done" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="3"
                Width="75" IsCancel="True" HorizontalAlignment="Center"
                AutomationProperties.Name="Done"
                Click="DoneButton_Click"/>
    </Grid>
</Window>
