<UserControl x:Class="JJFlexWpf.Controls.RadioCheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="160" d:DesignHeight="100"
             Focusable="True"
             IsTabStop="True">

    <!-- WPF replacement for RadioBoxes.ChekBox.
         GroupBox with enum flags display. Shows summary text when collapsed,
         individual checkboxes when expanded (focused).
         Uses WPF Expander for accessible expand/collapse. -->
    <GroupBox x:Name="TheGroupBox" FontSize="12">
        <StackPanel x:Name="ContentPanel" Orientation="Vertical">
            <!-- Summary text shown when collapsed -->
            <TextBlock x:Name="SummaryText"
                       FontSize="11"
                       Margin="2"
                       TextWrapping="Wrap" />
            <!-- Checkboxes added dynamically in Setup() -->
            <StackPanel x:Name="CheckBoxPanel"
                        Orientation="Vertical"
                        Visibility="Collapsed" />
        </StackPanel>
    </GroupBox>
</UserControl>
