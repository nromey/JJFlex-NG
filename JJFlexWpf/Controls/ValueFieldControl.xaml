<UserControl x:Class="JJFlexWpf.Controls.ValueFieldControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="200" d:DesignHeight="24"
             Focusable="True"
             IsTabStop="True"
             PreviewKeyDown="OnPreviewKeyDown"
             GotFocus="OnGotFocus">

    <!-- Focusable value control: "Label: Value" with Up/Down arrow adjustment.
         Used in ScreenFieldsPanel for numeric radio parameters (Volume, AGC Threshold, etc.).
         NVDA reads AutomationProperties.Name on focus. Speak() fires on value change. -->
    <Border x:Name="OuterBorder"
            BorderBrush="Gray" BorderThickness="1"
            Padding="6,2" Margin="2"
            Background="Transparent">
        <TextBlock x:Name="DisplayText" FontSize="12" />
    </Border>

    <UserControl.Style>
        <Style TargetType="UserControl">
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Style>
</UserControl>
