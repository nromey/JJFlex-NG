<UserControl x:Class="JJFlexWpf.Controls.RadioNumberBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="100" d:DesignHeight="36"
             Focusable="True"
             IsTabStop="True">

    <!-- WPF replacement for RadioBoxes.NumberBox.
         Header label + TextBox with keyboard-driven increment/decrement.
         Up/Down arrows step by Increment, Home/End jump to limits. -->
    <StackPanel Orientation="Vertical">
        <TextBlock x:Name="HeaderLabel" FontSize="10"
                   Foreground="Gray" Margin="2,0,0,0" />
        <TextBox x:Name="TheTextBox"
                 FontSize="12"
                 MinWidth="60"
                 PreviewKeyDown="TheTextBox_PreviewKeyDown"
                 GotFocus="TheTextBox_GotFocus"
                 LostFocus="TheTextBox_LostFocus" />
    </StackPanel>
</UserControl>
