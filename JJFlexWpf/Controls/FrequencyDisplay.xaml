<UserControl x:Class="JJFlexWpf.Controls.FrequencyDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:JJFlexWpf.Controls"
             mc:Ignorable="d"
             d:DesignWidth="600" d:DesignHeight="24"
             AutomationProperties.Name="Frequency Display"
             Focusable="False"
             IsTabStop="False">

    <!-- WPF replacement for RadioBoxes.MainBox (FreqOut).
         Multi-field display: Slice, Mute, Volume, SMeter, Split, VOX, Freq, Offset, RIT, XIT.
         SilentTextBox suppresses NVDA text change events â€” all speech managed by our Speak() calls.
         Keyboard handlers route to field-specific delegates. -->
    <controls:SilentTextBox x:Name="DisplayBox"
             IsReadOnly="True"
             FontFamily="Consolas"
             FontSize="14"
             BorderThickness="1"
             VerticalContentAlignment="Center"
             AutomationProperties.Name="Frequency and VFO Display"
             PreviewKeyDown="DisplayBox_PreviewKeyDown"
             PreviewTextInput="DisplayBox_PreviewTextInput" />
</UserControl>
