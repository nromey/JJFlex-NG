<UserControl x:Class="JJFlexWpf.Controls.RadioInfoBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="140" d:DesignHeight="36"
             Focusable="True"
             IsTabStop="True">

    <!-- WPF replacement for RadioBoxes.InfoBox.
         Header label + TextBox with rig-aware update delegate.
         Used for various read-only or editable rig info fields. -->
    <StackPanel Orientation="Vertical">
        <TextBlock x:Name="HeaderLabel" FontSize="10"
                   Foreground="Gray" Margin="2,0,0,0" />
        <TextBox x:Name="TheTextBox"
                 FontSize="12"
                 MinWidth="80"
                 IsReadOnly="True"
                 PreviewKeyDown="TheTextBox_PreviewKeyDown"
                 GotFocus="TheTextBox_GotFocus" />
    </StackPanel>
</UserControl>
