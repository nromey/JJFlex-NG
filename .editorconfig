# EditorConfig for JJFlexRadio
# https://editorconfig.org

root = true

# Default settings for all files
[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# =============================================================================
# C# and VB.NET analyzer rule configuration
# =============================================================================
#
# Tier system:
#   warning    = Fix these — security issues, real bugs, important quality
#   suggestion = Good practice for new code, too noisy to enforce on legacy
#   none       = Not applicable or fundamentally wrong for this project
#
# When writing NEW code, aim to have zero warnings and zero suggestions.
# Existing code warnings will be cleaned up over time.
# =============================================================================

[*.{cs,vb}]

# ---------------------------------------------------------------------------
# KEEP AS WARNING — Security, real bugs, important issues
# ---------------------------------------------------------------------------
# (Default severity for CA2xxx security rules, S-security rules, etc.
#  No overrides needed — they're already warnings by default.)

# ---------------------------------------------------------------------------
# NONE — Not applicable to this project
# ---------------------------------------------------------------------------

# CA1416: Platform compatibility (entire app is Windows-only)
dotnet_diagnostic.CA1416.severity = none

# ---------------------------------------------------------------------------
# SUGGESTION — Good practice, enforce on new code, don't flood build on legacy
# ---------------------------------------------------------------------------

# --- Naming / Style (high volume, low impact) ---

# CA1507: Use nameof instead of string literal (1840 hits)
dotnet_diagnostic.CA1507.severity = suggestion

# CA1051: Don't expose public fields (1086 hits)
dotnet_diagnostic.CA1051.severity = suggestion

# CA1707: Remove underscores from member names (666 hits)
dotnet_diagnostic.CA1707.severity = suggestion

# CA1711: Identifiers should not have incorrect suffix (240 hits)
dotnet_diagnostic.CA1711.severity = suggestion

# CA1805: Member explicitly initialized to default
dotnet_diagnostic.CA1805.severity = suggestion

# CA1822: Member can be marked static (noisy on WinForms/WPF)
dotnet_diagnostic.CA1822.severity = suggestion

# CA1852: Type can be sealed (164 hits)
dotnet_diagnostic.CA1852.severity = suggestion

# S101: Class naming conventions
dotnet_diagnostic.S101.severity = suggestion

